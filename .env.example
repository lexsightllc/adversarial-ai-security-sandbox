# === Database Configuration ===
DATABASE_URL=postgresql://user:password@postgres:5432/adversarial_sandbox_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600
DB_ECHO=false
DB_CONNECT_TIMEOUT=10
DB_STATEMENT_TIMEOUT=30000

# === API Gateway Configuration ===
SECRET_KEY=your-super-secret-jwt-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=["*"]

# === Rate Limiting ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=100

# === Service Timeouts ===
MODEL_SERVICE_TIMEOUT=60
ATTACK_SERVICE_TIMEOUT=300
MODEL_LOADING_TIMEOUT=120
INFERENCE_TIMEOUT=30

# === Logging Configuration ===
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_FILE=false
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# === RabbitMQ Configuration ===
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# === Model Service Configuration ===
MODEL_CACHE_CAPACITY=5
MODEL_CACHE_TTL=3600
HUGGINGFACE_CACHE_DIR=/tmp/hf_cache

# === Attack Service Configuration ===
MAX_CONCURRENT_ATTACKS=10
ATTACK_TIMEOUT=300
WEBHOOK_LISTENER_URL=http://webhook-listener:8003/webhook
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5
WEBHOOK_FAILURE_RATE=0.2

# === Frontend Configuration ===
REACT_APP_API_BASE_URL=http://localhost:8000

# === Development ===
DEBUG=false
